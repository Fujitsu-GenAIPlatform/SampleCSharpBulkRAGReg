<UserControl x:Class="SampleCSharpBulkRAGReg.Views.RetrieverPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converter="clr-namespace:SampleCSharpBulkRAGReg.Converters" 
             xmlns:prop="clr-namespace:SampleCSharpBulkRAGReg.Properties"
             xmlns:local="clr-namespace:SampleCSharpBulkRAGReg.Views"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
             FontFamily="Meiryo UI"
             mc:Ignorable="d" 
             d:DesignWidth="544">
    <UserControl.Resources>
        <converter:Boolean2VisibilityConverter x:Key="Boolean2VisibilityConverter"/>
    </UserControl.Resources>

    <!-- Grid:UserControl全体 -->
    <VirtualizingStackPanel Orientation="Vertical" CanVerticallyScroll="false" IsVirtualizing="True" VirtualizationMode="Recycling" VerticalAlignment="Bottom">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="61" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="{Binding Name}" />
            <TextBlock Grid.Column="1" VerticalAlignment="Center" Margin="5,0,0,0" Visibility="{Binding IsPublic, Converter={StaticResource Boolean2VisibilityConverter}}">
                                <Run Text="["/>
                                <Run Text="{x:Static prop:Resources.Public}"/>
                                <Run Text="]"/>
            </TextBlock>
            <TextBlock Grid.Column="2" VerticalAlignment="Center" Margin="5,0,0,0" Visibility="{Binding IsOwner, Converter={StaticResource Boolean2VisibilityConverter}}">
                                <Run Text="["/>
                                <Run Text="{x:Static prop:Resources.Owner}"/>
                                <Run Text="]"/>
            </TextBlock>
            <Button Grid.Column="3" Content="{x:Static prop:Resources.Delete}" HorizontalAlignment="Right" Width="56" FontSize="14" FontWeight="Bold" Background="White" 
                                Margin="5,0,0,0">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:InvokeCommandAction Command="{Binding DataContext.DeleteRetrieverCommand, RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}" CommandParameter="{Binding}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>
        </Grid>
    </VirtualizingStackPanel>
</UserControl>
